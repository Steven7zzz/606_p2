<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<!-- tr: table row, th: table header cell, td: table data cell, -->

<table>
  <thead>
    <tr>
      <th><%= sortable_column("title", "Title") %></th>
      <th><%= sortable_column("rating", "Rating") %></th>
      <th><%= sortable_column("release_date", "Release Date") %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td class="<%= 'highlighted-column' if params[:column] == 'title' %>"><%= movie.title %></td>
        <td class="<%= 'highlighted-column' if params[:column] == 'rating' %>"><%= movie.rating %></td>
        <td class="<%= 'highlighted-column' if params[:column] == 'release_date' %>"><%= movie.release_date %></td>
        <td>
          <%= link_to "Show", movie, class: "action-button" %> |
          <%= link_to "Edit", edit_movie_path(movie), class: "action-button" %> |
          <%= link_to "Delete", movie, method: :delete, class: "action-button" %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td>Total Movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>

<%= link_to "New movie", new_movie_path, class: "new-movie-button" %>
